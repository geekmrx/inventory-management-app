extends layout 

block content 

  h1 #{title}: #{category.name} 

  if category_items.length 
    
    p #[strong Delete the following books before attempting to delete this category.]

    div(style="margin-left:20px;margin-top:20px")
      h2(style="font-size:1.5rem;") Items 

      dl
        each item in category_items 
          dt 
            a(href=item.url) #{item.name} 
          //- dd #{item.summary} 

  else 
    p Do you really want to delete this Category?

  form(method='POST')
    div.form-group
      input#categoryid.form-control(type='hidden', name='categoryid', value=category._id )

    button.btn.btn-primary(type='submit') Delete
